                                                                        </div>
                                                                                        <div style="float:right; position:relative; right:-300%; margin-top:10%; font-size:larger;">
                                                                                            <a class="nav navbar-btn right" asp-area="" asp-controller="Home" asp-action="Signup">Join us</a>
                                                                                        </div>}


                    &nbsp;
                    <div>
                        <ul>
                            @if (User.IsInRole("Admin"))
                            {
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <ul class="nav justify-content-center">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">About us</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="DietPlans" asp-action="Index">Diet Plans</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Exrecises" asp-action="Index">Exrecises</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Programmes" asp-action="Index">Programmes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Recipes" asp-action="Index">Recipes</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Enrollments" asp-action="Index">Enrollments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>







                            </ul>
                        </div>}
                            @if (User.IsInRole("Trainer"))
                            {
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <ul class="nav justify-content-center">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">About us</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="DietPlans" asp-action="Index">Diet Plans</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Exrecises" asp-action="Index">Exrecises</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Programmes" asp-action="Index">Programmes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Recipes" asp-action="Index">Recipes</a>
                                </li>


                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Enrollments" asp-action="Index">Enrollments</a>
                                </li>
                                <button style="font-size:20px; top:23%; font-family:Ebrima; position:relative; float:right; right:-200%;" class="btn btn-primary">
                                    <a asp-area="" asp-controller="Account" asp-action="Logout" style="color:white">Logout</a>
                                </button>}

                            </ul>
                        </div>}

                            @if (User.IsInRole("User"))
                            {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">About us</a>
                                        </li>
                                                        <li class="nav-item">
                                                            <a class="nav-link text-dark" asp-area="" asp-controller="DietPlans" asp-action="Index">Diet Plans</a>
                                                        </li>
                                                                        <li class="nav-item">
                                                                            <a class="nav-link text-dark" asp-area="" asp-controller="Exrecises" asp-action="Index">Exrecises</a>
                                                                        </li>
                                                                                        <li class="nav-item">
                                                                                            <a class="nav-link text-dark" asp-area="" asp-controller="Programmes" asp-action="Index">Programmes</a>
                                                                                        </li>
                                                                                                        <li class="nav-item">
                                                                                                            <a class="nav-link text-dark" asp-area="" asp-controller="Recipes" asp-action="Index">Recipes</a>
                                                                                                        </li>
                                                                                                                        <button style="font-size:20px; top:23%; font-family:Ebrima; position:relative; float:right; right:-200%;" class="btn btn-primary">
                                                                                                                            <a asp-area="" asp-controller="Account" asp-action="Logout" style="color:white">Logout</a>
                                                                                                                        </button>}

                        </ul>

                    </div>
                </div>
            </div>
        </nav>








        </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()


        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - FitnessApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
