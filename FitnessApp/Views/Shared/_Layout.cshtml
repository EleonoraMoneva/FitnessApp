        <nav class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <div class="container">

                <div class="navbar-header">

                    @if (User.Identity.IsAuthenticated)
                    {
        @if (User.IsInRole("Admin"))
        {<div style="float:left; opacity:1;">
                <a asp-area="" asp-controller="Home" asp-action="Index">  </a>
            </div>}
                        @if (User.IsInRole("User"))
                        {<div style="float:left; opacity:1;">
                                <a asp-area="" asp-controller="Users" asp-action="UserProfile" asp-route-name="@(User.Identity.Name)">  </a>
                            </div>}
                                        @if (User.IsInRole("Trainer"))
                                        {<div style="float:left; opacity:1;">
                                                <a asp-area="" asp-controller="Trainers" asp-action="TrainerProfile" asp-route-name="@(User.Identity.Name)">  </a>
                                            </div>} }
                                    else

                                    {
                        <div style="float:right; position:relative; right:-1%; margin-top:10%; font-size:larger;">
                            <a class="nav navbar-btn right" asp-area="" asp-controller="" asp-action="">Fitness App</a>
                        </div>
                                        <div style="float:right; position:relative; right:-150%; margin-top:10%; font-size:larger;">
                                            <a class="nav navbar-btn right" asp-area="" asp-controller="Home" asp-action="Aboutus">About us</a>
                                        </div>
