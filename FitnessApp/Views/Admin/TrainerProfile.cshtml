
@model AppUser


<h2>@(Model != null && Model.TrainerId != null ? "Промени" : "Нов") кориснички профил</h2>
<h4>Trainer: @ViewData["Name"]</h4>
<hr />
<div class="row">
    <form asp-action="TrainerProfile" method="post">
        <div class="col-md-4">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" hidden>
                <input name="TrainerId" class="form-control" value="@(Model != null ? Model.TrainerId : @ViewData["TrainerId"])" hidden />
            </div>
            <div class="form-group">
                <label for="Id">ID на корисник</label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label for="PasswordHash">Хеширана лозинка</label>
                <input asp-for="PasswordHash" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label for="PhoneNumber">Тел. број</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Email">Email адреса</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Password">Лозинка</label>
                <input name="Password" class="form-control" />
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="@(Model != null && Model.TrainerId != null ? "Зачувај" : "Внеси нов")" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-controller="Trainer" asp-action="Index">Back to trainers</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}